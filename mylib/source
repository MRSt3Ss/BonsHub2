-- Load library
local DarkUI = loadstring(game:HttpGet("URL_SCRIPT_DIATAS"))():Load()

-- Create window
local Window = DarkUI:MakeWindow({
    Name = "Modern UI Library"
})

-- Create tabs
local MainTab = Window:MakeTab({
    Name = "Main Features"
})

local SettingsTab = Window:MakeTab({
    Name = "Settings"
})

local PremiumTab = Window:MakeTab({
    Name = "Premium"
})

-- Main Tab Elements
MainTab:AddLabel({
    Name = "Welcome to Modern UI"
})

MainTab:AddParagraph({
    Name = "About",
    Content = "This is a modern UI library with smooth animations and beautiful design. You can use various elements like buttons, toggles, sliders, and more to create amazing interfaces for your scripts!"
})

MainTab:AddButton({
    Name = "Test Button",
    Callback = function()
        print("Button clicked!")
    end
})

MainTab:AddToggle({
    Name = "Enable Features",
    Default = false,
    Callback = function(Value)
        print("Toggle:", Value)
    end
})

MainTab:AddSlider({
    Name = "Volume",
    Min = 0,
    Max = 100,
    Default = 50,
    Increment = 5,
    Callback = function(Value)
        print("Volume set to:", Value)
    end
})

MainTab:AddTextbox({
    Name = "Player Name",
    Default = "",
    TextDisappear = true,
    Callback = function(Value)
        print("Player name:", Value)
    end
})

MainTab:AddDropdown({
    Name = "Select Option",
    Default = "Option 1",
    Options = {"Option 1", "Option 2", "Option 3", "Option 4"},
    Callback = function(Value)
        print("Selected:", Value)
    end
})

MainTab:AddKeybind({
    Name = "Toggle Menu",
    Default = Enum.KeyCode.RightControl,
    Callback = function()
        print("Keybind pressed!")
    end
})

-- Settings Tab
SettingsTab:AddLabel({
    Name = "Settings"
})

SettingsTab:AddToggle({
    Name = "Dark Mode",
    Default = true,
    Callback = function(Value)
        print("Dark mode:", Value)
    end
})

SettingsTab:AddButton({
    Name = "Save Settings",
    Callback = function()
        print("Settings saved!")
    end
})

-- Initialize
Window:Init()
